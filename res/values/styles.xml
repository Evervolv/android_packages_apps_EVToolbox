<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EVToolbox" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/evtoolbox_primary</item>
        <item name="android:colorPrimaryDark">@color/evtoolbox_primary_dark</item>
        <item name="android:colorAccent">@color/evtoolbox_accent</item>
        <item name="android:textColorPrimary">@color/evtoolbox_text_primary</item>
        <item name="android:textColor">@color/evtoolbox_text_secondary</item>
        <item name="android:navigationBarColor">@color/evtoolbox_primary_dark</item>
    </style>

    <style name="PinButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">4dip</item>
        <item name="android:paddingEnd">4dip</item>
    </style>
</resources>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="statusbar_settings"
    android:title="@string/statusbar_settings_title" >

    <com.evervolv.toolbox.preference.SystemSettingSwitchPreference
        android:key="status_bar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false"
        android:persistent="true" />

    <PreferenceCategory
        android:key="battery_category"
        android:title="@string/battery_category_title">

        <com.evervolv.toolbox.preference.SecureSettingListPreference
            android:key="status_bar_battery_style"
            android:title="@string/battery_icon_title"
            android:summary="@string/battery_icon_summary"
            android:dialogTitle="@string/battery_icon_title"
            android:entries="@array/statusbar_batt_style_entries"
            android:entryValues="@array/statusbar_batt_style_entryvalues"
            android:defaultValue="0"
            android:persistent="true" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="pref_battery_icon_color"
            android:title="@string/battery_icon_color"
            android:defaultValue="0xffffff"
            android:persistent="false" />

        <com.evervolv.toolbox.preference.SecureSettingListPreference
            android:key="status_bar_show_battery_percent"
            android:title="@string/battery_icon_percent_title"
            android:summary="@string/battery_icon_percent_summary"
            android:dialogTitle="@string/battery_icon_percent_title"
            android:entries="@array/statusbar_batt_percent_entries"
            android:entryValues="@array/statusbar_batt_percent_entryvalues"
            android:defaultValue="0"
            android:persistent="true" />

        <com.evervolv.toolbox.preference.SecureSettingSwitchPreference
            android:key="status_bar_battery_style_tile"
            android:title="@string/battery_icon_qs_tile_title"
            android:summary="@string/battery_icon_qs_tile_summary"
            android:defaultValue="true"
            android:persistent="true" />

        <com.evervolv.toolbox.preference.SecureSettingSwitchPreference
            android:key="force_charge_battery_text"
            android:title="@string/battery_show_charging_percent_title"
            android:summary="@string/battery_show_charging_percent_summary"
            android:defaultValue="false"
            android:persistent="true" />

        <com.evervolv.toolbox.preference.SecureSettingListPreference
            android:key="text_charging_symbol"
            android:title="@string/battery_charging_symbol_title"
            android:summary="%s"
            android:dialogTitle="@string/battery_charging_symbol_dialog"
            android:entries="@array/battery_charging_symbol_entries"
            android:entryValues="@array/battery_charging_symbol_entryvalues"
            android:dependency="force_charge_battery_text"
            android:defaultValue="0"
            android:persistent="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="clock_category"
        android:title="@string/clock_category_title">

        <com.evervolv.toolbox.preference.SystemSettingListPreference
            android:key="statusbar_clock_am_pm_style"
            android:title="@string/clock_am_pm_style_title"
            android:summary="@string/clock_am_pm_style_summary"
            android:dialogTitle="@string/clock_am_pm_style_title"
            android:entries="@array/statusbar_clock_am_pm_style_entries"
            android:entryValues="@array/statusbar_clock_am_pm_style_entryvalues"
            android:defaultValue="2"
            android:persistent="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="quick_settings_category"
        android:title="@string/quick_settings_category_title">

        <com.evervolv.toolbox.preference.SystemSettingSwitchPreference
            android:key="status_bar_quick_qs_pulldown"
            android:title="@string/qs_quick_pulldown_title"
            android:summary="@string/qs_quick_pulldown_summary"
            android:defaultValue="false"
            android:persistent="true" />

    </PreferenceCategory>

</PreferenceScreen>

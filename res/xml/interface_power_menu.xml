<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <SwitchPreference android:key="pref_power_menu_hide_screenshot"
            android:title="@string/pref_power_menu_hide_screenshot_title"
            android:disableDependentsState="true">
        </SwitchPreference>

        <SwitchPreference android:key="pref_power_menu_hide_sound"
            android:title="@string/pref_power_menu_hide_sound_title">
        </SwitchPreference>

        <SwitchPreference android:key="pref_power_menu_hide_airplane_mode"
            android:title="@string/pref_power_menu_hide_airplane_mode_title">
        </SwitchPreference>

        <SwitchPreference android:key="pref_power_menu_hide_reboot_menu"
            android:title="@string/pref_power_menu_hide_reboot_menu_title">
        </SwitchPreference>

        <com.evervolv.toolbox.preference.NumberPickerPreference android:key="pref_power_menu_screenshot_delay"
            android:title="@string/pref_power_menu_screenshot_delay_title"
            android:dependency="pref_power_menu_hide_screenshot">
        </com.evervolv.toolbox.preference.NumberPickerPreference>

</PreferenceScreen>
